.page-header
  %h1 Workshop
%p
  %strong Title :
  = @workshop.title
%p
  %strong Description :
  = @workshop.description
%p
  %strong Start Date :
  = @workshop.start_date.try(:strftime, "%d-%b-%Y %I:%H %p")
%p
  %strong Finish Date :
  = @workshop.end_date.try(:strftime, "%d-%b-%Y %I:%H %p")
%p
  %strong Place :
  = @workshop.place
= link_to 'Back', workshops_path, class: 'btn btn-default'

= link_to 'Edit', edit_workshop_path(@workshop), class: 'btn btn-default'

= link_to 'Delete', workshop_path(@workshop), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger'

.page-header
  %h2 Topics
%table.table.table-striped
  %thead
    %tr
      %th Id
      %th Title
      %th Description
  %tbody
    - @topics.each do |topic|
      %td=topic.id
      %td= topic.title
      %td=topic.description
      %td= link_to 'Edit', edit_workshop_topic_path(@workshop, topic), class: 'btn btn-default btn-xs'
      %td= link_to 'Destroy', workshop_topic_path(@workshop, topic), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger'
%br
= link_to 'Add New Topic', new_workshop_topic_path(@workshop), class: 'btn btn-primary'
