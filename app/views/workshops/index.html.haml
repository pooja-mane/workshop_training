.page-header
  %h1 Workshops
%table.table.table-striped
  %thead
    %tr
      %th Id
      %th Title
      %th Description
      %th Start Date
      %th Finished Date
      %th Duration
      %th Place
      %th{:colspan => "3"}
  %tbody
    - @workshops.each do |workshop|
      %tr
        %td= workshop.id
        %td= workshop.title
        %td= workshop.description
        %td= workshop.start_date.try(:strftime, "%d-%b-%Y %I:%H %p")
        %td= workshop.end_date.try(:strftime, "%d-%b-%Y %I:%H %p")
        %td= workshop.duration
        %td= workshop.place
        %td= link_to 'Show', workshop, class: 'btn btn-default btn-xs'
        %td= link_to 'Edit', edit_workshop_path(workshop), class: 'btn btn-default btn-xs'
        %td= link_to 'Destroy', workshop, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger'
%br
= link_to 'New workshop', new_workshop_path, class: 'btn btn-primary'
