.page-header
  %h1 Coaches
%table.table.table-striped
  %thead
    %tr
      %th Id
      %th Name 
      %th Email
  %tbody
    - @coaches.each do |coach|
      %tr
        %td= coach.id
        %td= coach.name
        %td= coach.email
        %td= link_to 'Show', coach, class: 'btn btn-default btn-xs'
        %td= link_to 'Edit', edit_coach_path(coach), class: 'btn btn-default btn-xs'
        %td= link_to 'Destroy', coach, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger'
%br
= link_to 'New coach', new_coach_path, class: 'btn btn-primary'
